from sense_hat import SenseHat

from time import sleep

sense = SenseHat()

sense.set_pixel(2,1,0,225,0)

sense.set_pixel(2,2,0,225,255)

sleep(0.4)

sense.set_pixel(3,2,0,225,0)

sense.set_pixel(3,3,0,225,255)

sleep(0.4)

sense.set_pixel(4,3,0,225,0)

sense.set_pixel(4,4,0,225,225)

sleep(0.4)

sense.set_pixel(5,4,0,225,0)

sense.set_pixel(5,5,0,225,225)

sense.clear()

sense.set_pixel(2,1,0,225,0)

sleep(0.05)

sense.set_pixel(2,2,0,225,255)

sleep(0.05)

sense.set_pixel(3,2,0,225,0)

sleep(0.05)

sense.set_pixel(3,3,0,225,255)

sleep(0.05)

sense.set_pixel(4,3,0,225,0)

sleep(0.05)

sense.set_pixel(4,4,0,225,225)

sleep(0.05)

sense.set_pixel(5,4,0,225,0)

sleep(0.05)

sense.set_pixel(5,5,0,225,225)

sleep(0.05)

sense.set_pixel(2,1,0,225,0)

sense.clear()

sense.set_pixel(2,1,0,225,0)

sleep(0.05)

sense.set_pixel(2,2,0,225,255)

sleep(0.05)

sense.set_pixel(3,2,0,225,0)

sleep(0.05)

sense.set_pixel(3,3,0,225,255)

sleep(0.05)

sense.set_pixel(4,3,0,225,0)

sleep(0.05)

sense.set_pixel(4,4,0,225,225)

sleep(0.05)

sense.set_pixel(5,4,0,225,0)

sleep(0.05)

sense.set_pixel(5,5,0,225,225)

sleep(0.05)

sense.set_pixel(2,1,0,225,0)

sense.clear()

sense.set_pixel(2,1,0,225,0)

sleep(0.05)

sense.set_pixel(2,2,0,225,255)

sleep(0.05)

sense.set_pixel(3,2,0,225,0)

sleep(0.05)

sense.set_pixel(3,3,0,225,255)

sleep(0.05)

sense.set_pixel(4,3,0,225,0)

sleep(0.05)

sense.set_pixel(4,4,0,225,225)

sleep(0.05)

sense.set_pixel(5,4,0,225,0)

sleep(0.05)

sense.set_pixel(5,5,0,225,225)

